
CREATE DATABASE beverages_db;
USE beverages_db;
CREATE TABLE beverages ( 
beverage_code INT (10) NOT  NULL
AUTO_INCREMENT, 
beverage_name VARCHAR(50) NOT NULL, 
price DECIMAL(10 , 2) NOT NULL,
 PRIMARY KEY (beverage_code)
)
